<%= form_for(@suggestion) do |f| %>
  <% if @suggestion.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@suggestion.errors.count, "error") %> prohibited this suggestion from being saved:</h2>

      <ul>
      <% @suggestion.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :food_image %>
    <%= f.file_field :food_image %>
  </div>
  
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :location %>
    <%= f.text_area :location %>
  </div>
  <div class="field">
    <%= f.label :category %>
    <%= f.select :category, ["Breakfast", "Lunch", "Dinner"] %>
  </div>
  <div class="field">
    <%= f.label :type %>
    <%= f.select :food_type, ["Food", "Drink"] %>
  </div>
  <div class="actions">
    <%= f.submit "Suggest", class: "button expand" %>
  </div>
<% end %>
