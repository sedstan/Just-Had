<p id="notice"><%= notice %></p>

<h1>Listing Suggestions</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Description</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @suggestions.each do |suggestion| %>
      <tr>
        <td><%= image_tag suggestion.food_image.url %></td>
        <td><%= suggestion.description %></td>
        <td><%= suggestion.user %></td>
        <td><%= suggestion.location %></td>
        <td><%= suggestion.food_type %></td>
        <td><%= suggestion.category %></td>
        <td><%= link_to 'Show', suggestion %></td>
        <td><%= link_to 'Edit', edit_suggestion_path(suggestion) %></td>
        <td><%= link_to 'Destroy', suggestion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Suggestion', new_suggestion_path %>
